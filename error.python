from tkinter import *
import time

window = Tk()
window.geometry("400x400")
window.title("Test")

buttonClicked = False
def clicked():
    global buttonClicked
    print("Button clicked!")
    buttonClicked = True

btn = Button(window, text="Press me!", command=clicked)
btn.grid(column=2, row=1)

def task():
    while True:
        print(buttonClicked)
        window.update()
        time.sleep(1)

task()